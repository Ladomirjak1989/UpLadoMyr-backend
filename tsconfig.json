{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@projects/*": [
        "src/projects/*"
      ],
      "@auth/*": [
        "src/auth/*"
      ]
    },
    "sourceMap": true,
    "incremental": true,
    "noEmit": false
  },
  "include": [
    "src",
    "src/types",
    "src/**/*"
  ]
}